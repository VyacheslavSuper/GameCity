                        <ToggleGroup fx:id="Implementation2" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rd_btn5" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" text="Стратегия 2" toggleGroup="$Implementation2" />
                  <RadioButton fx:id="rd_btn6" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" text="Стратегия 3" toggleGroup="$Implementation2" />
                  <Label fx:id="txt_qualityright" text="Лёгкий" visible="false" />
                  <MenuButton fx:id="mbtn_quality_right" mnemonicParsing="false" text="Сложность" visible="false">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#setQuality" text="Лёгкий" />
                        <MenuItem mnemonicParsing="false" onAction="#setQuality" text="Средний" />
                        <MenuItem mnemonicParsing="false" onAction="#setQuality" text="Сложный" />
                     </items>
                  </MenuButton>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>

                    <items>
                      <MenuItem mnemonicParsing="false" text="Лёгкий" />
                      <MenuItem mnemonicParsing="false" text="Средний" />
                        <MenuItem mnemonicParsing="false" text="Сложный" />
                    </items>
                  </MenuButton>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />

            </VBox>
            <VBox alignment="TOP_CENTER" layoutX="369.0" layoutY="5.0" prefHeight="268.0" prefWidth="227.0" spacing="10.0" AnchorPane.bottomAnchor="127.0" AnchorPane.leftAnchor="369.0" AnchorPane.rightAnchor="4.0" AnchorPane.topAnchor="5.0">
               <children>
                  <Label fx:id="name_right" onMouseClicked="#pressName" text="Игрок 2" />
                  <RadioButton fx:id="rd_btn4" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" selected="true" text="Стратегия 1">

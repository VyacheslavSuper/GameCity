               <children>
                  <Label fx:id="name_left" onMouseClicked="#pressName" text="Игрок 1" />
                  <RadioButton fx:id="rd_btn1" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" selected="true" text="Стратегия 1">

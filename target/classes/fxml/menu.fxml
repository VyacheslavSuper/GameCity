            <items>
              <MenuItem mnemonicParsing="false" text="Выход" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Помощь">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <AnchorPane minHeight="250.0" minWidth="600.0" prefHeight="250.0" prefWidth="600.0">
         <children>
            <Button fx:id="btn_onStart" layoutX="250.0" layoutY="100.0" mnemonicParsing="false" onAction="#pressOnStart" prefWidth="100.0" text="Старт" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="100.0">

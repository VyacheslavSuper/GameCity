                        <ToggleGroup fx:id="Implementation" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rd_btn2" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" text="Стратегия 2" toggleGroup="$Implementation" />
                  <RadioButton fx:id="rd_btn3" mnemonicParsing="false" onAction="#setStrategy" prefHeight="17.0" prefWidth="110.0" text="Стратегия 3" toggleGroup="$Implementation" />
                  <Label fx:id="txt_qualityleft" text="Лёгкий" visible="false" />
